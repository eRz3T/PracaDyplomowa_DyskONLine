<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="mt-4">Witaj, <%= user.email_users %>!</h1>

        <!-- Przykładowe elementy Bootstrap -->
        <form action="/logout" method="POST" class="mt-3">
            <button type="submit" class="btn btn-primary">Wyloguj się</button>
        </form>

        <h3 class="mt-5">Twoje pliki</h3>
        <ul class="list-group">
            <% if (files.length > 0) { %>
                <% files.forEach(function(file) { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <%= file %>
                        <div>
                            <a href="/download/<%= file %>" class="btn btn-success btn-sm">Pobierz</a>
                            <button type="button" class="btn btn-danger btn-sm" onclick="deleteFile('<%= file %>')">Usuń</button>
                        </div>
                    </li>
                <% }); %>
            <% } else { %>
                <li class="list-group-item">Nie masz żadnych plików</li>
            <% } %>
        </ul>

        <h3 class="mt-5">Prześlij swój plik</h3>
        <form id="uploadForm" enctype="multipart/form-data" class="mt-3">
            <input type="file" id="file" name="file" class="form-control mb-3" required>
            <button type="submit" class="btn btn-primary">Prześlij</button>
        </form>

        <div id="uploadError" class="text-danger mt-3" style="display: none;"></div>
        <div id="uploadSuccess" class="text-success mt-3" style="display: none;"></div>
    </div>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/deleteFile.js"></script>
</body>
</html>
